<Window x:Class="LegalNotes.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegalNotes.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Left">
            <ComboBox x:Name="cmbNotarialActions"
                      ItemsSource="{Binding}"
                      IsEditable="True" 
                      Text="{Binding Name}"
                      SelectionChanged="cmbNotarialActions_SelectionChanged"/>
            <ComboBox x:Name="cmbNotarialTypes"
                      ItemsSource="{Binding}"
                      IsEditable="True" 
                      Text="{Binding Name}"
                      SelectionChanged="cmbNotarialTypes_SelectionChanged"/>
            <ComboBox x:Name="cmbNotarialObjects"
                      ItemsSource="{Binding}"
                      IsEditable="True"
                      Text="{Binding Name}"/>
        </StackPanel>
        
    </Grid>
</Window>
