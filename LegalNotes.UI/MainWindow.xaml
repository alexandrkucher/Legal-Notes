<Window x:Class="LegalNotes.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegalNotes.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="Документы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,5,5">
                        <Button x:Name="btnAddDocument" Content="Добавить" Width="80" HorizontalAlignment="Left" Click="btnAddDocument_Click"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Margin="0,5,0,5"  Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Content="С:" Target="{Binding ElementName=dtpFrom}" />
                        <DatePicker x:Name="dtpFrom" />
                        <Label Content="По:" Target="{Binding ElementName=dtpTo}" />
                        <DatePicker x:Name="dtpTo" />

                        <Label Content="Документ:" Target="{Binding ElementName=cmbNotarialActions}"/>
                        <ComboBox  
                            x:Name="cmbNotarialActions"               
                            IsEditable="True" 
                            SelectedIndex="0"
                            SelectionChanged="cmbNotarialActions_SelectionChanged">
                            <ComboBox.Resources>
                                <CollectionViewSource x:Key="NotarialActionsCollection" Source="{Binding NotarialActions}"/>
                            </ComboBox.Resources>
                            <ComboBox.ItemsSource>
                                <CompositeCollection>
                                    <ComboBoxItem Content="-- Все --" />
                                    <CollectionContainer Collection="{Binding Source={StaticResource NotarialActionsCollection}}" />
                                </CompositeCollection>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <Label Content="Тип документа:" Target="{Binding ElementName=cmbNotarialActionsTypes}" Visibility="{Binding ElementName=cmbNotarialActionsTypes, Path=Visibility}"/>
                        <ComboBox 
                            x:Name="cmbNotarialActionsTypes"
                            SelectedIndex="0"
                            IsSynchronizedWithCurrentItem="True"
                            IsEditable="True" 
                            Visibility="Collapsed"
                            SelectionChanged="cmbNotarialActionsTypes_SelectionChanged">
                            <ComboBox.Resources>
                                <CollectionViewSource x:Key="NotarialActionsTypesCollection" Source="{Binding}"/>
                            </ComboBox.Resources>
                            <ComboBox.ItemsSource>
                                <CompositeCollection>
                                    <ComboBoxItem Content="-- Все --" />
                                    <CollectionContainer Collection="{Binding Source={StaticResource NotarialActionsTypesCollection}}" />
                                </CompositeCollection>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <Label Content="Объект:" Target="{Binding ElementName=cmbNotarialActionsObjects}" Visibility="{Binding ElementName=cmbNotarialActionsObjects, Path=Visibility}"/>
                        <ComboBox 
                            x:Name="cmbNotarialActionsObjects"
                            SelectedIndex="0"
                            IsSynchronizedWithCurrentItem="True"
                            IsEditable="True"
                            Visibility="Collapsed">
                            <ComboBox.Resources>
                                <CollectionViewSource x:Key="NotarialActionsObjectsCollection" Source="{Binding}"/>
                            </ComboBox.Resources>
                            <ComboBox.ItemsSource>
                                <CompositeCollection>
                                    <ComboBoxItem Content="-- Все --" />
                                    <CollectionContainer Collection="{Binding Source={StaticResource NotarialActionsObjectsCollection}}" />
                                </CompositeCollection>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <Button x:Name="btnLoad" Content="Загрузить" Click="btnLoad_Click" Margin="5,0,0,0"/>
                    </StackPanel>
                    <DataGrid x:Name="dgrDocuments" 
                          Grid.Row="1"
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Top" 
                          ItemsSource="{Binding Documents}"
                          AutoGenerateColumns="False" 
                          CanUserSortColumns="False"
                          CanUserAddRows="false"
                          PreviewKeyDown="dgrDocuments_PreviewKeyDown">
                        <DataGrid.ItemContainerStyle>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseDoubleClick" Handler="dgrDocuments_Row_MouseDoubleClick"/>
                            </Style>
                        </DataGrid.ItemContainerStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding DocumentId}" IsReadOnly="True" />
                            <DataGridTextColumn Header="Номер записи" Binding="{Binding RecordNumber}" IsReadOnly="True" />
                            <DataGridTextColumn Header="Документ" Binding="{Binding NotarialAction.Name}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Тип документа" Binding="{Binding NotarialActionsType.Name}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Объект" Binding="{Binding NotarialActionsObject.Name}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding CreateDate}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Дата изменения" Binding="{Binding ModifiedDate}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Стоимость (грн)" Binding="{Binding Price}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Паспорт клиента" Binding="{Binding Client.PassportNumber}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Кем выдан" Binding="{Binding Client.PassportData}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding Client.LastName}" IsReadOnly="True" />
                            <DataGridTextColumn Header="Имя" Binding="{Binding Client.Name}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Отчество" Binding="{Binding Client.MiddleName}"  IsReadOnly="True"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding Client.Address}"  IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Отчеты">
            </TabItem>
        </TabControl>


    </Grid>
</Window>
